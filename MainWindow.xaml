<Window x:Class="MedicalRenderDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalRenderDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1300">
    <!-- 将 Grid 作为 Window 的唯一内容 -->
    <Grid>
        <!-- 定义外层 Grid 的行 -->
        <Grid.RowDefinitions>
            <!-- 顶部按钮行 -->
            <RowDefinition Height="Auto"/>
            <!-- 主内容区域行 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部按钮 -->
        <Button Name="LoadButton" 
                Content="Load" 
                Grid.Row="0" 
                Margin="5" 
                Padding="10,5" 
                HorizontalAlignment="Left" 
                Click="OnLoadClick"/>

        <!-- 原有的三列内容区域 -->
        <Grid Margin="0,37,234,0" Grid.RowSpan="2">
            <!-- 定义主内容 Grid 的列 -->
            <Grid.ColumnDefinitions>
                <!-- 左侧列表列 -->
                <ColumnDefinition Width="100"/>
                <!-- 中间 D3DHost 列 -->
                <ColumnDefinition Width="900"/>
                <!-- 右侧包含三个 D3DHost 的列 -->
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧列表控件 -->
            <ListBox Name="MyListBox" Grid.Column="0" Margin="5">
                <ListBoxItem Content="Item 1"/>
                <ListBoxItem Content="Item 2"/>
                <ListBoxItem Content="Item 3"/>
            </ListBox>

            <!-- 中间的 D3DHost 控件 -->
            <local:D3DHost x:Name="HostAxial" Grid.Column="1" Margin="5"/>

            <!-- 右侧区域 - 包含三个 D3DHost 的嵌套 Grid -->
            <Grid Grid.Column="2" Margin="5">
                <!-- 定义嵌套 Grid 的行 -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 上方 D3DHost -->
                <local:D3DHost x:Name="HostCoronal" Grid.Row="0" Margin="0,0,0,2.5"/>

                <!-- 中方 D3DHost -->
                <local:D3DHost x:Name="HostSagittal" Grid.Row="1" Margin="0,2.5,0,2.5"/>

                <!-- 下方 D3DHost -->
                <local:D3DHost x:Name="Host3D" Grid.Row="2" Margin="0,2.5,0,0"/>
            </Grid>
        </Grid>
    </Grid>

</Window>