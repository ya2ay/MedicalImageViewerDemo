<Window x:Class="MedicalRenderDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalRenderDemo"
        mc:Ignorable="d"
        Title="MainWindow">
    <!-- 将 Grid 作为 Window 的唯一内容 -->
    <Grid Height="Auto" Width="Auto">
        <!-- 定义外层 Grid 的行 -->
        <Grid.RowDefinitions>
            <!-- 顶部按钮行 -->
            <RowDefinition Height="Auto"/>
            <!-- 主内容区域行 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部按钮 -->
        <Button Name="LoadButton" 
                Content="Load" 
                Grid.Row="0" 
                Margin="5" 
                Padding="10,5" 
                HorizontalAlignment="Left" 
                Click="OnLoadClick" Width="50" Height="30"/>

        <!-- 原有的三列内容区域 -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <!-- 左侧列表区 (100px) -->
                <ColumnDefinition Width="100"/>
                <!-- 中间主视图区 (弹性填充) -->
                <ColumnDefinition Width="3*"/>
                <!-- 右侧三视图区 (建议固定宽度，例如 250px) -->
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧 ListBox -->
            <ListBox Name="MyListBox" Margin="5" VerticalAlignment="Top" Height="90">
                <ListBoxItem Content="Item 1"/>
                <ListBoxItem Content="Item 2"/>
                <ListBoxItem Content="Item 3"/>
            </ListBox>

            <!-- 中间 Axial 视图 -->
            <local:D3DHost x:Name="HostAxial" Grid.Column="1" Margin="5"/>

            <!-- 右侧三视图容器 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <!-- Coronal -->
                    <RowDefinition Height="1*"/>
                    <!-- Sagittal -->
                    <RowDefinition Height="1*"/>
                    <!-- 3D -->
                </Grid.RowDefinitions>

                <local:D3DHost x:Name="HostCoronal" Grid.Row="0" Margin="5"/>
                <local:D3DHost x:Name="HostSagittal" Grid.Row="1" Margin="5"/>
                <local:D3DHost x:Name="Host3D" Grid.Row="2" Margin="5"/>
            </Grid>
        </Grid>
    </Grid>

</Window>